#!/bin/zsh
#
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

#Test if your terminal supports 256 colors: $ echotc Co

# ZSH_HIGHLIGHT_STYLES[suffix-alias]=fg=red,underline
ZSH_HIGHLIGHT_STYLES[precommand]=fg=#00ff00

#used to be green for commands
ZSH_HIGHLIGHT_STYLES[arg0]=fg=##4e5481
#used to be bold for errors
ZSH_HIGHLIGHT_STYLES[unknown-token]=fg=#ff0000
#used to be bold for directories
ZSH_HIGHLIGHT_STYLES[autodirectory]=fg=#3e7eff6
#used to make text white and underlined when writing a path
ZSH_HIGHLIGHT_STYLES[path]=fg=#999999
#Everything else
ZSH_HIGHLIGHT_STYLES[default]=fg=#666666
#Double quoted arguments
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]=fg=#afc350
