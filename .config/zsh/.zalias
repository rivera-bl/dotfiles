#!/bin/zsh
#Run 'alias' for the full list

#FILES
alias zsc="$EDITOR ~/repos/dotfiles/.config/zsh/.zshrc"
alias zsa="$EDITOR ~/repos/dotfiles/.config/zsh/.zalias"
alias i3c="$EDITOR ~/repos/dotfiles/.config/i3/config"
alias nvc="$EDITOR ~/repos/dotfiles/.config/nvim/init.vim"
alias stc="$EDITOR ~/repos/dotfiles/.config/st/config.h"
alias vwi="$EDITOR ~/.local/share/nvim/site/plugged/vimwiki/README.md"

#COMMANDS
#MAIN
alias mki="sudo make clean install"

#GIT
alias gaa="git add ."
alias gcm="git commit -m"
alias gst="git status"
alias gss="git status -s"
alias grs="git reset HEAD"
alias grc="git reset HEAD^"
alias gpp="git push -u origin master"
alias gpr="git push -f"
alias glc="git log --pretty=format:\"%h > %s\""


#MANPAGES
#Simple Prompt Escapes from zsh manpage
alias zpes="man zshmisc | sed -n '2030,$'p | less"
#VCS Info Module information from zsh manpage
alias zvcs="man zshcontrib | sed -n '800,$'p | less"
