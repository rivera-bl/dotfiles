#!/bin/zsh
#Run 'alias' for the full list

#FILES
alias zsc="nvim ~/.config/zsh/.zshrc"
alias zsa="nvim ~/.config/zsh/.zalias"
alias i3c="nvim ~/.config/i3/config"
alias nvc="nvim ~/.config/nvim/init.vim"
alias stc="$EDITOR ~/.config/st/config.h"
alias vwi="nvim ~/.local/share/nvim/site/plugged/vimwiki/README.md"

#COMMANDS
#GIT
alias gaa="git add ."
alias gcm="git commit -m"
alias gst="git status"
alias gss="git status -s"
alias grh="git reset HEAD"
alias gpo="git push -u origin master"

#MANPAGES
#Simple Prompt Escapes from zsh manpage
alias zpes="man zshmisc | sed -n '2030,$'p | less"
#VCS Info Module information from zsh manpage
alias zvcs="man zshcontrib | sed -n '800,$'p | less"
